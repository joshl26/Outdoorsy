<link rel="stylesheet" type="text/css" href="/outdoorsy/stylesheets/stars.css" />
<link rel="stylesheet" type="text/css" href="/outdoorsy/stylesheets/campgrounds-show.css" />
<div class="row g-4">
  <div class="col-12 col-md-6">
    <div id="campgroundCarousel" class="carousel slide mb-4" data-ride="carousel">
      <div class="carousel-inner rounded shadow-sm">
        <% campground.images.forEach((img, i) => { %>
        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
          <img src="<%= img.url%>" class="d-block w-100 rounded" alt="<%= campground.title %> image <%= i+1 %>" />
        </div>
        <% }) %>
      </div>
      <% if(campground.images.length > 1) {%>
      <a
        class="carousel-control-prev"
        href="#campgroundCarousel"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#campgroundCarousel"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <% } %>
    </div>

    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h5 class="card-title text-primary"><%= campground.title%></h5>
        <p class="card-text text-muted"><%= campground.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><i class="fas fa-map-marker-alt me-2"></i><%= campground.location%></li>
        <li class="list-group-item">Submitted by <span class="text-primary"><%= campground.author.username%></span></li>
        <li class="list-group-item fw-bold">$<%= campground.price%>/night</li>
      </ul>
      <% if( currentUser && campground.author.equals(currentUser._id)) {%>
      <div class="card-body d-flex gap-3">
        <a
          class="btn btn-info flex-grow-1"
          href="/outdoorsy/campgrounds/<%=campground._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline flex-grow-1"
          action="/outdoorsy/campgrounds/<%=campground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger w-100">Delete</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted small">2 days ago</div>
    </div>
  </div>

  <div class="col-12 col-md-6">
    <div id="map" class="mb-4 rounded shadow-sm" style="height: 350px;"></div>

    <% if(currentUser){ %>
    <h2 class="mb-3 text-primary">Leave a Review</h2>
    <form
      action="/outdoorsy/campgrounds/<%=campground._id%>/reviews"
      method="POST"
      class="mb-4 validated-form"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" />
      </div>
      <fieldset class="starability-basic mb-3">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      <div class="mb-3">
        <label class="form-label" for="body">Review Text</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success w-100">Submit</button>
    </form>
    <% } %>

    <% for(let review of campground.reviews) { %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <h5 class="card-title text-primary"><%= review.author.username%></h5>
        <p class="starability-result" data-rating="<%=review.rating%>">
          Rated: <%= review.rating %> stars
        </p>
        <p class="card-text text-muted">Review: <%= review.body %></p>
        <% if( currentUser && review.author.equals(currentUser._id)) {%>
        <form
          action="/outdoorsy/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campground = <%- JSON.stringify(campground) %>;

  mapboxgl.accessToken = mapToken;
  const map = new mapboxgl.Map({
    container: "map",
    style: "mapbox://styles/mapbox/light-v10",
    center: campground.geometry.coordinates,
    zoom: 10,
  });

  map.addControl(new mapboxgl.NavigationControl());

  new mapboxgl.Marker()
    .setLngLat(campground.geometry.coordinates)
    .setPopup(
      new mapboxgl.Popup({ offset: 25 }).setHTML(
        `<h3>${campground.title}</h3><p>${campground.location}</p>`
      )
    )
    .addTo(map);
</script>