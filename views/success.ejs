<%
// success.ejs
// Variables expected:
// - user: { id, displayName, emails: [{ value }] }
%>

<head>
  <link rel="stylesheet" href="/outdoorsy/stylesheets/success.css" />
</head>

<div class="container profile-success" >
  <section class="profile-card shadow-sm text-center mx-auto mt-5">
    <header class="profile-header mb-4">
      <h1 id="profile-heading" class="text-success fw-bold">
        <i class="fa fa-user-circle me-2" aria-hidden="true"></i>
        Profile Information
      </h1>
      <p class="lead text-muted">Youâ€™ve successfully signed in with your account.</p>
    </header>

    <dl class="profile-details text-start mx-auto">
      <div class="detail-item">
        <dt>Account ID</dt>
        <dd><code><%= user.id %></code></dd>
      </div>
      <div class="detail-item">
        <dt>Email</dt>
        <dd><%= user.emails && user.emails[0] ? user.emails[0].value : "N/A" %></dd>
      </div>
      <div class="detail-item">
        <dt>Display Name</dt>
        <dd><%= user.displayName || "Anonymous" %></dd>
      </div>
    </dl>

    <div class="mt-4">
      <a href="/" class="btn btn-primary me-2">
        <i class="fas fa-home me-2" aria-hidden="true"></i> Go to Home
      </a>
      <a href="/logout" class="btn btn-outline-danger">
        <i class="fas fa-sign-out-alt me-2" aria-hidden="true"></i> Log Out
      </a>
    </div>
  </section>
</div>