<!DOCTYPE html>
<html lang="en">
  <body class="d-flex text-center text-white">
    <!-- Hero Section -->
    <div class="home-hero">
      <main class="px-3">
        <div class="hero-content">
          <h1 class="mb-4">Discover Your Next Adventure</h1>
          <p class="lead">
            Explore breathtaking campgrounds, hidden trails, and stunning
            outdoor destinations. Share your adventures and connect with nature
            lovers worldwide.
          </p>
          <div
            class="d-flex flex-column flex-md-row justify-content-center gap-3 mt-4"
          >
            <a href="<%= basePath %>/campgrounds" class="btn btn-lg btn-primary"
              >Explore Campgrounds <i class="fas fa-arrow-right"></i
            ></a>
            <a
              href="<%= basePath %>/campgrounds/new"
              class="btn btn-lg btn-outline-light"
              >Share Your Spot <i class="fas fa-plus"></i
            ></a>
          </div>
        </div>

        <!-- Features Section -->
        <section class="features-section">
          <div class="container">
            <div class="text-center mb-5">
              <h2 class="display-5 fw-bold mb-3">Why Choose Outdoorsy?</h2>
              <p class="lead text-muted">
                Everything you need for your perfect outdoor experience
              </p>
            </div>
            <div class="row g-4">
              <div class="col-md-4">
                <div class="feature-card fade-in">
                  <div class="feature-icon">
                    <i class="fas fa-map-marked-alt"></i>
                  </div>
                  <h3 class="feature-title">Discover Locations</h3>
                  <p class="feature-description">
                    Find hidden gems and popular destinations with detailed
                    maps, photos, and reviews from fellow adventurers.
                  </p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="feature-card fade-in">
                  <div class="feature-icon">
                    <i class="fas fa-users"></i>
                  </div>
                  <h3 class="feature-title">Join Community</h3>
                  <p class="feature-description">
                    Connect with outdoor enthusiasts, share experiences, and get
                    insider tips from seasoned campers.
                  </p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="feature-card fade-in">
                  <div class="feature-icon">
                    <i class="fas fa-star"></i>
                  </div>
                  <h3 class="feature-title">Rate & Review</h3>
                  <p class="feature-description">
                    Share your honest feedback and help others make informed
                    decisions about their next camping trip.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Stats Section -->
        <section class="stats-section">
          <div class="container">
            <div class="row">
              <div class="col-md-3 col-6">
                <div class="stat-item">
                  <span class="stat-number">1,250+</span>
                  <span class="stat-label">Campgrounds</span>
                </div>
              </div>
              <div class="col-md-3 col-6">
                <div class="stat-item">
                  <span class="stat-number">5,400+</span>
                  <span class="stat-label">Reviews</span>
                </div>
              </div>
              <div class="col-md-3 col-6">
                <div class="stat-item">
                  <span class="stat-number">2,800+</span>
                  <span class="stat-label">Members</span>
                </div>
              </div>
              <div class="col-md-3 col-6">
                <div class="stat-item">
                  <span class="stat-number">48</span>
                  <span class="stat-label">States</span>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
          <div class="container">
            <div class="cta-content">
              <h2>Ready to Start Your Adventure?</h2>
              <p>
                Join thousands of outdoor enthusiasts discovering amazing places
                every day.
              </p>
              <a href="<%= basePath %>/register" class="btn btn-lg btn-light">
                Get Started Free <i class="fas fa-arrow-right"></i>
              </a>
            </div>
          </div>
        </section>
      </main>

      <!-- Scroll Indicator -->
      <div class="scroll-indicator">
        <i class="fas fa-chevron-down"></i>
      </div>
    </div>

    <!-- Font Awesome (add to your boilerplate if not already included) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </body>
</html>
