<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="card shadow">
    <img
      src="https://res.cloudinary.com/dv6keahg3/image/upload/v1680645329/Outdoorsy/ibew4ersdrwm46pkunud.png"
      alt=""
      class="card-img-top"
    />
    <div class="card-body">
      <h5 class="card-title">Register</h5>
      <form
        action="/outdoorsy/register"
        method="POST"
        class="validated-form"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label" for="username">Username</label>
          <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            required
            autofocus
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input
            class="form-control"
            type="email"
            id="email"
            name="email"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password</label>
          <input
            class="form-control"
            type="password"
            id="password"
            name="password"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success btn-block">Register</button>
      </form>
      <div class="container">
        <div class="jumbotron text-center text-primary">
          <h1><span class="fa fa-lock"></span> Social Authentication</h1>
          <p>Login or Register with:</p>
          <a href="/outdoorsy/auth/google" class="btn btn-danger"
            ><span class="fa fa-google"></span> SignIn with Google</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
